@model string

@{
    if (ViewBag.id != null)
    {
        var id = ViewBag.id.ToString();
        @Html.PasswordFor(vm => vm, new { placeholder = Html.DisplayNameForModel(), id = id })
    }
    else
    {
        @Html.PasswordFor(vm => vm, new { placeholder = Html.DisplayNameForModel() })
    }
}