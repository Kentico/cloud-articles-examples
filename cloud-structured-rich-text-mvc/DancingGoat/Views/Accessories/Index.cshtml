@model DancingGoat.Models.AccessoriesViewModel

@{
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
    ViewBag.Title = Resources.DancingGoat.Accessories;
    var AccessoriesAsProducts = Model.Items.Cast<DancingGoat.Models.Product>();
}

<div class="product-page row">
    <div class="flex">
        <aside class="col-md-4 col-lg-3 product-filter">
            @using (Html.BeginForm("Filter", "Accessories"))
            {
                @Html.Partial("AccessoriesFilter", Model.Filter)
            }
        </aside>

        <div id="product-list" class="col-md-8 col-lg-9 product-list">
            @Html.Partial("ProductListing", AccessoriesAsProducts)
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/formAutoPost.js")

    <script>
            $(".js-postback input:checkbox").formAutoPost({ targetContainerSelector: "#product-list" });
    </script>
}